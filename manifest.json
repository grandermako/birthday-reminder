{
	"name": "Birthday Reminder",
	"description": "If you happen forget about birthday your friends or family member. This extension is for you",
	"permissions": ["storage", "activeTab"],
    "background": {
      "scripts": ["background.js"]
    },
	"version": "1.0.0",
	"manifest_version": 2,
	"icons": {
	"128": "gift.png"
	},
	"browser_action":{
	"default_icon": "icon.png",
	"default_popup": "index.html"
	},
	"commands": 
	{
		"_execute_browser_action": 
		{
			"suggested_key":
			{
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Opens Birthday Reminder"
		}
	}  
}